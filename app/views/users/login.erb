<style> span {color: red;} </style>
<h2>Log In to ButterOff</h2>

<%if session[:message] != nil%> <h3> <span><%=session[:message]%></span> </h3> <%end%>
<h3>Choose a User:</h3>
<form action="/login" method="post">
	<%User.all.each do |u|%>
	<input type="radio" name="user[username]" value="<%=u.username%>"><%=u.username%>
	<%end%>
	<p>Password: <input type="password" name="user[password]"></p>
	<input type="submit" value="Log In">
</form>

<h2>Or Make a <a href="/signup">New User</a></h2>