<style> h3 {color: red;} </style>
<h2>Log In to ButterOff</h2>

<%if session[:login_message] != nil%> <h3> <%=session[:login_message]%> </h3> <%end%>
<h4>Choose a User:</h4>
<form action="/login" method="post">
	<%User.all.each do |u|%>
	<input type="radio" name="user[username]" value="<%=u.username%>"><%=u.username%>
	<%end%>
	<p>Password: <input type="password" name="user[password]"></p>
	<input type="submit" value="Log In">
</form>

<h3>Or Make a <a href="/signup">New User</a></h3>